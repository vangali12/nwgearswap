<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Home/Home.css">
    <title>Register</title>
</head>
<body>
    <div class="container-fluid">

    <div class="row">
        <div class="col-md-6 left-side"></div>
        <div class="col-md-6 right-side">
            @model ecommerce.Models.UserViewModel
            <form asp-controller="Home" asp-action="Register" method="post">

                <span class="input input--hoshi">
                    <input class="input__field input__field--hoshi" asp-for="FirstName"/>
                    <label class="input__label input__label--hoshi input__label--hoshi-color-3" asp-for="FirstName">
                        <span class="input__label-content input__label-content--hoshi">First Name:</span>
                    </label>
                </span>

                <span class="error" asp-validation-for="FirstName"></span>

                <span class="input input--hoshi">
                    <input input class="input__field input__field--hoshi" asp-for="LastName"/>
                    <label class="input__label input__label--hoshi input__label--hoshi-color-3" asp-for="LastName">
                        <span class="input__label-content input__label-content--hoshi">Last Name:</span>
                    </label>
                </span>

                <span class="error" asp-validation-for="LastName"></span>
                
                <span class="input input--hoshi">
                    <input input class="input__field input__field--hoshi" asp-for="Email"/>
                    <label class="input__label input__label--hoshi input__label--hoshi-color-3" asp-for="Email">
                        <span class="input__label-content input__label-content--hoshi">Email:</span>
                    </label>
                </span>

                <span class="error" asp-validation-for="Email"></span>

                @if (ViewBag.EmailExistReg != null) {
                    <span class="error"><p>@ViewBag.EmailExistReg</p></span>
                }
            
                <span class="input input--hoshi">
                    <input type="password" class="input__field input__field--hoshi" asp-for="Password"/>
                    <label class="input__label input__label--hoshi input__label--hoshi-color-3" asp-for="Password">
                        <span class="input__label-content input__label-content--hoshi">Password:</span>
                    </label>
                </span>

                <span class="error" asp-validation-for="Password"></span>
                
                <span class="input input--hoshi">
                    <input type="password" class="input__field input__field--hoshi" asp-for="cPassword"/>
                    <label class="input__label input__label--hoshi input__label--hoshi-color-3" asp-for="cPassword">
                        <span class="input__label-content input__label-content--hoshi">Confirm Password:</span>
                    </label>
                </span>

                <span class="error" asp-validation-for="cPassword"></span>

                <div class="cta">
                    <button class="btn btn-primary pull-left" type="submit">Sign Up</button>
                    <span><a href="/login">I am already a member</a></span>
                </div>
            </form>
        </div>
    </div>

    </div>
</body>
</html>