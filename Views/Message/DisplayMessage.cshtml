<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/Message/DisplayMessage.css">
    <title>Messages</title>
</head>
<body class="container-fluid">
    <header class="container-fluid">
        <div class="row top-row">
            <div class="col-md-1"></div>
            <div class="col-md-2 iconPic">
                <img src="~/images/Store/logo.jpg" alt="MountainLogo">
            </div>
            <div class="col-md-8">
                <nav class="topNav">
                    <ul>
                        <li><a href="/logout">Logout</a></li>
                    </ul>
                </nav>
                <nav class="bottomNav">
                    <ul class="navbar-toggle">
                        <li><a href="/dashboard">Dashboard</a></li>
                        <li><a href="/profile/@ViewBag.currentUser.userid">Profile</a></li>
                        <li><a href="/products">Products</a></li>
                        <li> 
                            @if (@ViewBag.NewMessageCount > 0) {
                                <a href="/messages">Messages @ViewBag.NewMessageCount</a>
                            } else {
                                <a href="/messages">Messages</a>
                            }
                        </li>
                        
                    </ul>
                </nav>
            </div>
            <div class="col-md-1"></div>
        </div>
    </header>
    <section class="container">
        <div class="row">
            <div class="col-md-1 col-lg-1"></div>
            <div class="col-md-10 col-lg-10 messageBox">
            <h4>Re: @ViewBag.CurrentMessage.Title</h4>
                <div class="row">
                <div class="col-md-4 col-sm-12 leftSide">
                    <div class="profilePic">
                    @if (@ViewBag.CurrentMessage.Sender.Image == null) {
                        <img src="~/images/User/blankUser.png">
                    } else {
                        <img src="~/images/User/@ViewBag.CurrentMessage.Sender.userid/@ViewBag.CurrentMessage.Sender.Image">
                    }
                    </div>
                    <a href="/profile/@ViewBag.CurrentMessage.Sender.userid">@ViewBag.CurrentMessage.Sender.FirstName @ViewBag.CurrentMessage.Sender.LastName</a>
                </div>
                <div class="col-md-8 col-sm-12 rightSide">            
                    <p>@ViewBag.CurrentMessage.Content</p>
                    <a href="mailto:@ViewBag.CurrentMessage.Sender.Email"><button>Respond</button></a>
                </div>
                </div>
            </div>
            <div class="col-md-1 col-lg-1"></div>
        </div>
    </section>
    <footer class="container">
        <p>About This Site | <a href="http://www.alisamarie.me">Meet the Creator</a></p>
    </footer>
</body>
</html>